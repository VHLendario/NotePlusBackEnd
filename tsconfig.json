{
  "compilerOptions": {
    /* Layout do Projeto */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Configurações de Módulo (Ajustado para o erro sumir) */
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Suporte ao TypeORM (Obrigatório) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Strictness (Equilibrado para produção) */
    "strict": false, 
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    /* Outros */
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"]
}